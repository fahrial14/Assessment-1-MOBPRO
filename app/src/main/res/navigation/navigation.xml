<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/hitungFragment">

    <fragment
        android:id="@+id/hitungFragment"
        android:name="org.d3if1135.ngampusrek.ui.hitung.HitungFragment"
        tools:layout="@layout/fragment_hitung">
        <action
            android:id="@+id/action_hitungFragment_to_rewardFragment"
            app:destination="@id/rewardFragment" />
        <action
            android:id="@+id/action_hitungFragment_to_aboutFragment"
            app:destination="@id/aboutFragment" />
        <action
            android:id="@+id/action_hitungFragment_to_historiFragment"
            app:destination="@id/historiFragment" />
    </fragment>

    <fragment
        android:id="@+id/rewardFragment"
        android:name="org.d3if1135.ngampusrek.ui.RewardFragment"
        tools:layout="@layout/fragment_reward" >
        <argument
            android:name="reward"
            app:argType="org.d3if1135.ngampusrek.model.KategoriReward" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="org.d3if1135.ngampusrek.ui.AboutFragment"
        tools:layout="@layout/fragment_about" />
    <fragment
        android:id="@+id/historiFragment"
        android:name="org.d3if1135.ngampusrek.ui.history.HistoriFragment"
        tools:layout="@layout/fragment_histori" />
</navigation>